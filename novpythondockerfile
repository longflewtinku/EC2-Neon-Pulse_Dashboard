FROM python:3.12-alpine AS build 
ADD . /pythonapp
WORKDIR /pythonapp
RUN pip install --prefix=/aws -r requirements.txt

FROM python:3.12-alpine AS runtime 
LABEL author=devopsteamnov
LABEL project=python
COPY --from=build /pythonapp /laxmikanth
WORKDIR /laxmikanth
EXPOSE 5001
CMD ["python", "app.py"]